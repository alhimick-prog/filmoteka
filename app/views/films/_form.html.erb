<%= form_with model: film do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% film.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% film.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :trailer_url %><br>
    <%= form.text_area :trailer_url %><br>
    <% film.errors.full_messages_for(:trailer_url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :release_date %><br>
    <%= form.text_area :release_date %><br>
    <% film.errors.full_messages_for(:release_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :duration %><br>
    <%= form.text_area :duration %><br>
    <% film.errors.full_messages_for(:duration).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :age_restriction %><br>
    <%= form.text_area :age_restriction %><br>
    <% film.errors.full_messages_for(:age_restriction).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :creator_id %><br>
    <%= form.text_area :creator_id %><br>
    <% film.errors.full_messages_for(:creator_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :categories %><br>
    <%= form.select(:categories, Category.all.map {|p| [ p.name, p.id ] } ) %> 
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
