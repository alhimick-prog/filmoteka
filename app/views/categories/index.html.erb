<h1 class="text-center">Categories list</h1>
<% if policy(Category).new? %>
  <%= link_to "Create category", new_category_path, class: 'btn btn-primary' %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%=category.id%></td>
        <td><%=category.name%></td>
        <td><%=category.created_at%></td>
        <td><%=category.updated_at%></td>
        <td>
          <% if policy(category).edit? %>
            <%= link_to "Edit", edit_category_path(category), class: 'btn btn-primary' %>
          <% end %>
          <% if policy(category).destroy? %>
            <%= link_to "Destroy", category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
