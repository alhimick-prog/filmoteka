<%= form_with model: episode do |form| %>
  <div>
    <%= hidden_field_tag :season_id, season_id %>
  </div>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% episode.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% episode.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
