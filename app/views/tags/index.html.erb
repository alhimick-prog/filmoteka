<h1 class="text-center">Tags list</h1>
<% if policy(Tag).new? %>
  <%= link_to "Create tag", new_tag_path, class: 'btn btn-primary' %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%=tag.id%></td>
        <td><%=tag.name%></td>
        <td><%=tag.created_at%></td>
        <td><%=tag.updated_at%></td>
        <td>
          <% if policy(tag).edit? %>
            <%= link_to "Edit", edit_tag_path(tag), class: 'btn btn-primary' %>
          <% end %>
          <% if policy(tag).destroy? %>
            <%= link_to "Destroy", tag_path(tag), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
